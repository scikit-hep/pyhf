{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "https://diana-hep.org/pyhf/schemas/workspace.json",
    "type": "object",
    "properties": {
        "model": {
            "type": "object",
            "properties": {
                "channels": { "type": "array", "items": {"$ref": "model.json#/definitions/channel"} }
            }
        },
        "measurements": { "type": "array", "items": {"$ref": "measurements.json#/definitions/measurement"} },
        "data": { "type": "object" }
    },
    "additionalProperties": false,
    "required": ["model", "measurements", "data"]
}
