{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "type": "object",
    "properties": {
        "channels": { "type": "array", "items": {"$ref": "#/definitions/channel"} }
    },
    "additionalProperties": false,
    "required": ["channels"],

    "definitions": {
        "channel": {
            "type": "object",
            "properties": {
                "name": { "type": "string" },
                "samples": { "type": "array", "items": {"$ref": "#/definitions/sample"} }
            },
            "required": ["name", "samples"],
            "additionalProperties": false
        },
        "sample": {
            "type": "object",
            "properties": {
                "name": { "type": "string" },
                "data": { "$ref": "#/definitions/data" },
                "modifiers": {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            { "$ref": "#/definitions/modifier/histosys" },
                            { "$ref": "#/definitions/modifier/normfactor" },
                            { "$ref": "#/definitions/modifier/normsys" },
                            { "$ref": "#/definitions/modifier/shapefactor" },
                            { "$ref": "#/definitions/modifier/shapesys" }
                        ]
                    }
                }
            },
            "required": ["name", "data", "modifiers"],
            "additionalProperties": false
        },
        "modifier": {
            "histosys": {
                "type": "object",
                "properties": {
                    "name": { "type": "string" },
                    "type": { "type": "string", "const": "histosys" },
                    "data": { "$ref": "#/definitions/data"}
                },
                "additionalProperties": false
            },
            "normfactor": {
                "type": "object",
                "properties": {
                    "name": { "type": "string" },
                    "type": { "type": "string", "const": "normfactor" },
                    "data": { "$ref": "#/definitions/data"}
                },
                "additionalProperties": false
            },
            "normsys": {
                "type": "object",
                "properties": {
                    "name": { "type": "string" },
                    "type": { "type": "string", "const": "normsys" },
                    "data": { "$ref": "#/definitions/data"}
                },
                "additionalProperties": false
            },
            "shapefactor": {
                "type": "object",
                "properties": {
                    "name": { "type": "string" },
                    "type": { "type": "string", "const": "shapefactor" },
                    "data": { "$ref": "#/definitions/data"}
                },
                "additionalProperties": false
            },
            "shapesys": {
                "type": "object",
                "properties": {
                    "name": { "type": "string" },
                    "type": { "type": "string", "const": "shapesys" },
                    "data": { "$ref": "#/definitions/data"}
                },
                "additionalProperties": false
            }
        },
        "data": {
            "oneOf": [
                {
                    "type": "array",
                    "items": {"type": "number"}
                },
                {
                    "type": "null"
                },
                {
                    "type": "object",
                    "required": ["lo_data", "hi_data"]
                },
                {
                    "type": "object",
                    "required": ["lo", "hi"]
                }
            ]
        }
    }
}
