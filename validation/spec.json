{
	"$schema": "http://json-schema.org/draft-06/schema#",

  "definitions": {
    "channel": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z]+$": {
          "$ref": "#/definitions/sample"
        }
      },
      "additionalProperties": false
    },
    "sample": {
      "type": "object",
      "properties": {
        "data": { "$ref": "#/definitions/data"},
        "mods": {
          "type": "array",
          "items": {"$ref": "#/definitions/modification"}
        }
      },
      "required": ["data", "mods"],
      "additionalProperties": false
    },
    "modification": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["shapesys","normfactor","histosys","normsys"]
        },
        "data": { "$ref": "#/definitions/data"}
      },
      "additionalProperties": false
    },
    "data": {
      "oneOf": [
        {
          "type": "array",
          "items": {"type": "number"}
        },
        {
          "type": "null"
        },
        {
          "type": "object",
          "required": ["lo_hist", "hi_hist"]
        },
        {
          "type": "object",
          "required": ["lo", "hi"]
        }
      ]
    }
  },

	"type": "object",
	"patternProperties": {
		"^[a-zA-Z]+$": {
			"$ref": "#/definitions/channel"
		}
	},
	"additionalProperties": false
}
